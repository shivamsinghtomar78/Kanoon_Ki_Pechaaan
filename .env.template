# Kanoon Ki Pechaan - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Production Configuration
# Set to False for production deployment
DEVELOPMENT_MODE=True

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_storage_bucket

# Google AI Configuration
GOOGLE_API_KEY=your_google_ai_api_key_here

# Database Configuration
DB_HOST=localhost
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_NAME=kanoon_ki_pechaan
DB_PORT=3306

# Security Configuration (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=change-this-secret-key-in-production-use-long-random-string
JWT_SECRET_KEY=change-this-jwt-secret-key-in-production-use-long-random-string

# Indian Kanoon API (Optional)
INDIAN_KANOON_API_KEY=your_indian_kanoon_api_key
INDIAN_KANOON_BASE_URL=https://api.indiankanoon.org

# Application Configuration
APP_DEBUG=False
APP_HOST=localhost
APP_PORT=8501
FLASK_PORT=5000

# File Upload Configuration
MAX_FILE_SIZE_MB=50
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=pdf,doc,docx,txt

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Production-specific Settings
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Gunicorn Configuration (for production)
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# Redis URL for rate limiting (optional)
# REDIS_URL=redis://localhost:6379/0